#include "Draw.h"

//============================================================================

void DrawWindow (Write write);
void DrawGraphics (Write write, Timeline timeline);
void Zoom (Write write);
void MainWhile (Draw draw, Write write,);

//============================================================================

int main()
{
    txCreateWindow (x_size, y_size);

    Draw draw;

    Write write;

    Timeline timeline;

    txTextCursor (false);

    MainWhile (draw, write);

    return 0;
}

//============================================================================

void MainWhile (Draw draw, Write write)
{
    draw.DrawWindow (write);

    while (!Key (VK_ESCAPE))
    {
        draw.Control(write);

        draw.DrawPush ();
    }
}
